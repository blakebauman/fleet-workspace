{
	"name": "fleet-service",
	"version": "0.1.0",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch",
		"build:css:prod": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
		"build:wrangler": "run-wrangler-build",
		"check:lint": "run-eslint",
		"check:types": "run-tsc",
		"deploy": "run-wrangler-deploy",
		"dev": "run-wrangler-dev --port 3001",
		"fix:workers-types": "run-wrangler-types",
		"test": "run-vitest"
	},
	"dependencies": {
		"@cloudflare/agents": "^0.1.0",
		"@repo/hono-helpers": "workspace:*",
		"@repo/workspace-dependencies": "workspace:*",
		"hono": "4.9.1",
		"lucide-react": "^0.544.0",
		"workers-tagged-logger": "0.13.2",
		"zod": "^3.22.4"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "0.8.63",
		"@repo/eslint-config": "workspace:*",
		"@repo/tools": "workspace:*",
		"@repo/typescript-config": "workspace:*",
		"@tailwindcss/typography": "^0.5.18",
		"@types/node": "22.15.27",
		"autoprefixer": "^10.4.21",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.13",
		"vitest": "3.2.4",
		"wrangler": "4.29.1"
	}
}
